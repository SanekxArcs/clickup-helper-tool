{
  "manifest_version": 3,
  "name": "Branch & Commit Helper",
  "version": "25.08.09",
  "description": "Generate branch names and commit messages using Gemini AI with custom rules",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "*://*.twntydigital.de/*",
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
            "content-scripts/content.js",
            "content-scripts/breakpoint-checker.js",
            "content-scripts/performance-monitor.js",
            "content-scripts/grid-flex-visualizer.js",
            "content-scripts/box-model-visualizer.js",
            "content-scripts/console-overlay.js"
        ]
    },
    {
      "matches": ["https://meet.google.com/*-*-*"],
      "js": ["mattermost-meet-integration.js"]
    }
  ],
  "action": {
    "default_popup": "popup-new.html",
    "default_title": "Branch & Commit Helper"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Open Branch & Commit Helper popup"
    },
    "quick-generate": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2" 
      },
      "description": "Quick generate with auto-filled data"
    },
    "auto-fill": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Auto-fill from current page"
    },
    "copy-last-branch": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      },
      "description": "Copy last generated branch name to clipboard"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["console-injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
